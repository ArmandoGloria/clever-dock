<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:Controls="clr-namespace:CleverDock.Controls"
        x:Class="CleverDock.MainWindow" Title="CleverDock" Width="1080" Height="180" Visibility="Visible"
        WindowStyle="None" AllowsTransparency="True" HorizontalAlignment="Center" VerticalAlignment="Center"
        Background="Transparent">
    <Canvas VerticalAlignment="Bottom">
        <Grid Width="{Binding ElementName=DockIcons, Path=ActualWidth}"
              Canvas.Left="{Binding ElementName=DockIcons, Path=(Canvas.Left)}"
              Canvas.Bottom="{Binding ElementName=DockIcons, Path=(Canvas.Bottom)}"
              Style="{DynamicResource BackgroundGridStyle}">
            <Rectangle x:Name="BackgroundLeft" HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{DynamicResource BackgroundLeftStyle}"/>
            <Rectangle x:Name="BackgroundCenter" HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Style="{DynamicResource BackgroundCenterStyle}"/>
            <Rectangle x:Name="BackgroundRight" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource BackgroundRightStyle}"/>
        </Grid>
        <Controls:DockIconContainer x:Name="DockIcons" x:FieldModifier="public" Height="64" SnapsToDevicePixels="True" MinWidth="64" Style="{DynamicResource DockIconContainerStyle}" Canvas.Bottom="20"/>
    </Canvas>
</Window>